@using BWHazel.Aka.Model;

@model ShortUrl

@{
    this.ViewData["Title"] = "Delete Link?";
}

<div class="section">
    <div class="container">
        <h1>Are you sure?</h1>
        <p>Are you sure you want to delete this link?</p>

        <form asp-controller="Links" asp-action="Delete" method="post">
            <div style="text-align: center">
                <h2>@this.Model.Title</h2>
                <p><a href="@this.Model.Url">@this.Model.Url</a></p>

                <input type="hidden" asp-for="@this.Model.Id" />
                <input type="hidden" asp-for="@this.Model.Title" />
                <input type="hidden" asp-for="@this.Model.Url" />
                <button type="submit">Yes</button>
                <button asp-action="Index">No</button>
            </div>
        </form>
    </div>
</div>