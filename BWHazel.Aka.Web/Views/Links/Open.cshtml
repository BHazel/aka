@using BWHazel.Aka.Model;

@model ShortUrl

@{
    this.ViewData["Title"] = "Redirecting...";
}

<div class="section">
    <div class="container">
        <div class="row center">
            <h1>Please Wait...</h1>
            <h5>You are being redirected to:</h5>

            <h4>@this.Model.Title</h4>
            <h5><a href="@this.Model.Url">@this.Model.Url</a></h5>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        setTimeout("location.href = '@(this.Model.Url)';", 3000);
    </script>
}