@using BWHazel.Aka.Model;

@model ShortUrl

@{
    this.ViewData["Title"] = "Delete Link?";
}

<div class="section">
    <div class="container">
        <h1>Delete Link</h1>
        <p>Are you sure you want to delete this link?</p>

        <form asp-controller="Links" asp-action="Delete" method="post">
            <table class="striped">
                <tbody>
                    <tr>
                        <td><strong>ID</strong></td>
                        <td><code>@this.Model.Id</code></td>
                    </tr>
                    <tr>
                        <td><strong>Title</strong></td>
                        <td>@this.Model.Title</td>
                    </tr>
                    <tr>
                        <td><strong>URL</strong></td>
                        <td><a href="@this.Model.Url">@this.Model.Url</a></td>
                    </tr>
                </tbody>
            </table>

            <input type="hidden" asp-for="@this.Model.Id" />
            <input type="hidden" asp-for="@this.Model.Title" />
            <input type="hidden" asp-for="@this.Model.Url" />

            <br />
            <div class="row">
                <button type="submit" class="btn waves-effect waves-light colour-success">Yes</button>
                <button asp-action="Index" class="btn waves-effect waves-light colour-danger">No</button>
            </div>
        </form>
    </div>
</div>